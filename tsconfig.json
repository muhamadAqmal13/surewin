{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "CommonJS",
        "target": "ES2017",
        "noImplicitAny": false,
        "outDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["./dist"]
}
